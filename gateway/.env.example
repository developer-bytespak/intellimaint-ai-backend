# Gateway Environment Variables (Render)

# Node Environment
NODE_ENV=production
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@host:5432/intellimaint

# Frontend URL (IMPORTANT: Update with your actual frontend domain)
FRONTEND_URL=https://your-frontend-domain.com

# AI Services URL (IMPORTANT: Update with your Railway URL)
AI_SERVICES_URL=https://your-railway-service.railway.app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Redis Configuration (Optional)
REDIS_URL=redis://default:password@host:6379
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=intellimaint-uploads

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-gateway-app.onrender.com/api/v1/auth/google/callback

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=IntelliMaint <noreply@intellimaint.com>

# OpenAI AI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL_NAME=gpt-4o

# Portal Credentials (if needed)
PORTAL_EMAIL=your-portal-email
PORTAL_PASSWORD=your-portal-password

# Blob Storage Token (if using Vercel Blob)
BLOB_READ_WRITE_TOKEN=your-blob-token
